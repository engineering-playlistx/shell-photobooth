{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true
    // "allowJs": true,
    // "isolatedModules": true,
  },
  "include": ["**/*.ts", "**/*.tsx", "**/eslint.config.{ts,js}", "postcss.config.mjs", "prettier.config.js", "vite.config.js", "src/types/global.d.ts"],
  "exclude": ["**/node_modules"]
}

